<% comments.each do |comment| %>
  <div class="my-2">
    <% if comment.user == current_user %>
      <%= link_to comment_path(comment),method: :delete, data: {confirm: "You sure delete comment?"}, remote: true, class: "delete-comment" do %>
        <i class="fas fa-times"></i>
      <% end %>
    <% end %>
    <span>
      <strong>
        <%= link_to comment.user.name, user_path(comment.user), class: "no-text-decoration normal-color" %>
      </strong>
    </span>
    <span><%= comment.content %></span>
  </div>
<% end %>
