<div class="row">
  <div class="col-md-5 offset-md-2">
    <%= render "form" %>
    <div id="posts">
      <div class="mt-3 post mb-5" >
        <%= render "post" %>
      </div>
    </div>
  </div>

  <div class="col-md-3 offset-md-1 mt-5">
    <div class="width-suggest">
      <div class="row">
        <div class="col-3 pr-2">
          <%= link_to user_path(current_user), class: "no-text-decoration" do %>
            <%= user_avatar(current_user, class: 'media-object rounded-circle avatar-blog-suggest') %>
          <% end %>
        </div>

        <div class="col-6">
          <div class="row">
            <%= link_to user_path(current_user), class: "nomal-color no-text-decoration", title: current_user.name do %>
              <strong><%= current_user.name %></strong>
            <% end %>
          </div>
          <div class="row">
            <p class="email"><%= current_user.email %></p>
          </div>
        </div>

        <div class="col-3 text-primary">
          <%= link_to new_user_session_path class: "text-primary" do %>
            <strong>Switch</strong>
          <% end %>
        </div>
      </div>

      <div class="row mt-4">
        <div class="col-8 text-secondary">
          <strong>Suggestions For You</strong>
        </div>
        <div class="col-4">
          <strong><%= link_to "See all", users_path %></strong>
        </div>
      </div>

      <div>
        <%= render "shared/suggest_follow" %>
      </div>
    </div>
  </div>
</div>
