<div class="container mt-5">
  <%= form_for @plan, url: user_plans_path(current_user.id) do |f| %>
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= f.label :start_date%>
        <%= f.date_field :start_date, class: "form-control" %>
      </div>
      <div class="form-group col-md-6">
          <%= f.label :end_date%>
          <%= f.date_field :end_date, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :plan_money_come%>
      <%= f.number_field :plan_money_come, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :plan_money_out%>
      <%= f.number_field :plan_money_out, class: "form-control" %>
    </div>
    <div class="text-center p-3">
      <%= f.submit "Save", class: "btn btn-primary"%>
    </div>
  <% end %>
</div>
