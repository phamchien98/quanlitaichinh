$('#like-icon-post-<%= @post.id.to_s %>').html('<%= link_to post_likes_path(@post), method: :post, remote: true, class:"core-sprite love hide-text" do %><i class="far fa-heart fa-lg"></i><% end %>');
$('#like-text-post-<%= @post.id.to_s %>').html('<%= j render "posts/like_text", {likes: @post.likes_sort_by_created_at} if @post.likes.present? %>');
